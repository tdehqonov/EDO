<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvdocument_typeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvdocument_templateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:hint="document_template"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvdocument_typeID" />

    <TextView
        android:id="@+id/tvdocument_dateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:hint="document_date"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvdocument_typeID"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tvdocument_numberID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="document_number"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tvdocument_templateID"
        app:layout_constraintTop_toBottomOf="@+id/tvdocument_dateID" />

    <TextView
        android:id="@+id/tvpdf_file_nameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="12dp"
        android:text="pdf_file_name"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/tvdocument_typeID"
        app:layout_constraintTop_toBottomOf="@+id/tvdocument_templateID" />


</androidx.constraintlayout.widget.ConstraintLayout>